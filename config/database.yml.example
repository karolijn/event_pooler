# SQLite version 3.x
#   gem install sqlite3-ruby (not necessary on OS X Leopard)
development:
  adapter: mysql
  encoding: utf8
  database: event_pooler
  pool: 5
  username: rails
  password: rails
  socket: /tmp/mysql.sock
  host: localhost

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: postgresql
  host: localhost
  port: 5432
  username: rails
  password: rails
  database: event_pooler_test

production:
  adapter: postgresql
  host: localhost
  port: 5432
  username: rails
  password: rails
  database: event_pooler
