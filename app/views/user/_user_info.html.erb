<% btnText = "Sign-up"
	 btnText = "Update" unless @user.new_record? %>
<%= flash[:message] %>
<% form_for :user do |f| %>
  <%= f.error_messages %>
  Name: <%= f.text_field :name %><br />
  Email: <%= f.text_field :email %><br />
  New Password: <%= f.password_field :password, :value => '' %><br />
  Confirm Password: <%= f.password_field :password_confirmation, :value => '' %><br />
	<%= submit_tag btnText %>
<% end %>
