<% set_title 'Reset Password' %>

<% if @user.nil? %>
  Invalid password reset token.
<% else %>
  <% if @password_reset %>
    Your password has been successfully reset. You may now <%= link_to 'login', login_path %>.
  <% else %>
    <% form_for :user do |f| %>
      <%= f.error_messages %>
      New Password: <%= f.password_field :password, :value => '' %><br />
      Confirm Password: <%= f.password_field :password_confirmation, :value => '' %><br />
      <%= submit_tag 'Reset Password' %>
    <% end %>
  <% end %>
<% end %>