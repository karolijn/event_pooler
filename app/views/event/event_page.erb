<h3><%= @event.name %></h3>
<% unless flash[:message].nil? %>
  <%= flash[:message] %><br /><br />
<% end %>
<% unless @event.attendees.include?(current_user) %>
  <%= link_to 'Attend', attend_event_path %>
<% else %>
  <%= link_to 'Cancel Attendance', cancel_attendance_path %><br /><br />
  <%= render :partial => 'update_sharables' %>
  <%= render :partial => 'attendees' %>
<% end %>
